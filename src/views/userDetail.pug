extends layouts/main

block content
    .user-profile
        .user-profile__header
        - if (!user.avatarUrl)
            img.avatar(src="https://mybroadband.co.za/news/wp-content/uploads/2017/01/Profile-Picture.jpg")
        

        - else img.avatar(src=user.avatarUrl)

            h4.profile__usernamer=user.name
        if loggedUser && user.id === loggedUser.id
             .user-profile__btns
                a(href=`/users${routes.editProfile}`)
                     button ✍ Edit Profile
                a(href=`/users${routes.changePassword}`)
                     button 🔐 Change Password